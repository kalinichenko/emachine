script(type='text/template' id='favorite-table-template')
    table.table.table-hover.borderless.favorite-table
      tbody

script(type='text/template' id='favorite-tr-template')
    td.play.cursor-pointer
      a(href='')
        i.glyphicon.glyphicon-play
    td.favorite.play.cursor-pointer <%= sentence_eng %>
    td
      a.del.pull-right(href='')
        i.glyphicon.glyphicon-remove

script(type='text/template' id='favorites-empty-template')
  div.jumbotron
    h3 Your learning list is empty.
    p Wanna find something interesting?
    button.add.btn.btn-primary(type='button') Yeap!


script(type='text/template' id='sentence-template')
    td <%= sentence_eng %>
    td
      button.sentence-add.btn.btn-default.pull-right(type='button') Add

script(type='text/template' id='sentence-list-template')
    table.table.borderless
        tbody

script(type='text/template' id='sentences-empty-template')
    div.alert.alert-warning Nothing's been found for specified criteria.

script(type='text/template' id='sentences-error-template')
    div.alert.alert-danger(role="alert") Something wrong has happend. Status: <%= status %>. Text: <%= statusText %>.

script(type='text/template' id='filter-template')
  form(role="form")
    div.form-group
      div.input-group
        input.sentences_filter-criteria.form-control(type='text' autofocus rv-value="model:searchCriteria")
        span.input-group-btn
          button.sentences_filter-find.btn.btn-primary(type='button' data-loading-text="Finding") Find

script(type='text/template' id='finder-layout-view-template')
    div.finder-filter
    div.finder-content

// player
script(type='text/template' id='player-template')
  div.alert.alert-danger(role="alert" rv-if='model:error') Something wrong has happend. Type: {model:errorType}.
  h1.text-center { model:data.sentence_eng }
  h4.text-center
    small { model:data.sentence_rus }
  button.play-pause.btn.btn-default.form-control(data-loading-text="Loading" rv-html='model:action' rv-class-playing='model:statusPlaying' rv-class-paused='model:statusPaused')

